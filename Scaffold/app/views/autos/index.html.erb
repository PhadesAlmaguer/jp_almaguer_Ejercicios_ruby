

<div class="row">
  <h1 class="large-12 columns">Autos</h1>
</div>


<div class="row">
<table class="large-12 columns">
  <thead>
    <tr>
      <th>Marca</th>
      <th>Modelo</th>
      <th>Anio</th>
      <th>Precio</th>
      <th>Fecha adquisicion</th>
      <th colspan="3">
        <%= link_to 'Nuevo auto', new_auto_path, class:'button success  small-12 columns' %>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @autos.each do |auto| %>
      <tr>
        <td><%= auto.marca %></td>
        <td><%= auto.modelo %></td>
        <td><%= auto.anio %></td>
        <td><%= auto.precio %></td>
        <td><%= auto.fecha_adquisicion %></td>
        <td><%= link_to 'Consultar', auto, class: 'button small-12 columns' %></td>
        <td><%= link_to 'Editar', edit_auto_path(auto), class:' small-12 columns button secondary' %></td>
        <td><%= link_to 'Eliminar', auto, method: :delete, data: { confirm: 'EstÃ¡ seguro de querer eliminarlo?' }, class:'small-12 columns button alert' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  <div id="notice" class="small-12 columns">
      <%= notice %>
  </div>
</div>


